   "source": [
    "# Portfolio Collections Dashboard\n",
    "\n",
    "**Goal:** Interactive dashboard to visualise arrears and default trends for proactive collections management.\n",
    "\n",
    "This dashboard provides real-time filtering and analysis of water utility collections data."
   ]
  },
  {
   "cell_type": "code",
   "execution_count": null,
   "metadata": {},
   "outputs": [],
   "source": [
    "# Essential imports for interactive dashboard\n",
    "import sqlite3\n",
    "import pandas as pd\n",
    "import numpy as np\n",
    "import plotly.express as px\n",
    "import plotly.graph_objects as go\n",
    "from plotly.subplots import make_subplots\n",
    "import ipywidgets as widgets\n",
    "from IPython.display import display, clear_output\n",
    "import warnings\n",
    "warnings.filterwarnings('ignore')\n",
    "\n",
    "print(\"üìä Interactive Dashboard Components Loaded Successfully!\")\n",
    "print(\"üéõÔ∏è Ready to create interactive visualisations\")"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": null,
   "metadata": {},
   "outputs": [],
   "source": [
    "# Connect to database and load data\n",
    "con = sqlite3.connect('../data/water_collections_demo.sqlite')\n",
    "\n",
    "# Load monthly KPI data\n",
    "monthly_data = pd.read_sql(\"\"\"\n",
    "SELECT \n",
    "    strftime('%Y-%m', bill_period_end) AS month,\n",
    "    AVG(default_60d) AS default_rate,\n",
    "    SUM(bill_amount) AS total_billed,\n",
    "    SUM(paid_in_window) AS total_paid,\n",
    "    COUNT(*) as bill_count\n",
    "FROM bill_targets \n",
    "GROUP BY 1 \n",
    "ORDER BY 1\n",
    "\"\"\", con)\n",
    "\n",
    "# Load segmentation data\n",
    "income_data = pd.read_sql(\"\"\"\n",
    "SELECT \n",
    "    c.income_band,\n",
    "    ROUND(AVG(bt.default_60d), 3) AS default_rate,\n",
    "    COUNT(*) AS bills,\n",
    "    COUNT(DISTINCT bt.customer_id) AS customers\n",
    "FROM bill_targets bt \n",
    "JOIN customers c USING(customer_id) \n",
    "GROUP BY c.income_band \n",
    "ORDER BY default_rate DESC\n",
    "\"\"\", con)\n",
    "\n",
    "region_data = pd.read_sql(\"\"\"\n",
    "SELECT \n",
    "    c.region,\n",
    "    ROUND(AVG(bt.default_60d), 3) AS default_rate,\n",
    "    COUNT(*) AS bills\n",
    "FROM bill_targets bt \n",
    "JOIN customers c USING(customer_id) \n",
    "GROUP BY c.region \n",
    "ORDER BY default_rate DESC\n",
    "\"\"\", con)\n",
    "\n",
    "actions_data = pd.read_sql(\"\"\"\n",
    "SELECT \n",
    "    action,\n",
    "    COUNT(*) as count\n",
    "FROM collections_actions \n",
    "GROUP BY action \n",
    "ORDER BY count DESC\n",
    "\"\"\", con)\n",
    "\n",
    "con.close()\n",
    "\n",
    "print(f\"‚úÖ Data loaded successfully:\")\n",
    "print(f\"   üìÖ Monthly data: {len(monthly_data)} months\")\n",
    "print(f\"   üí∞ Income bands: {len(income_data)} segments\")\n",
    "print(f\"   üåç Regions: {len(region_data)} areas\")\n",
    "print(f\"   üìû Action types: {len(actions_data)} categories\")\n",
    "\n",
    "# Display sample data\n",
    "print(\"\\nüìä Sample Monthly Data:\")\n",
    "display(monthly_data.head())\n",
    "\n",
    "print(\"\\nüí∞ Income Band Analysis:\")\n",
    "display(income_data)\n",
    "\n",
    "print(\"\\nüåç Regional Analysis:\")\n",
    "display(region_data)"
   ]
  },
  {
   "cell_type": "markdown",
   "metadata": {},
   "source": [
    "## üéõÔ∏è INTERACTIVE DASHBOARD\n",
    "\n",
    "### Use the controls below to explore the data interactively!"
   ]
  },
  {
   "cell_type": "code",
   "execution_count": null,
   "metadata": {},
   "outputs": [],
   "source": [
    "# Create Interactive Dashboard\n",
    "print(\"üöÄ LAUNCHING INTERACTIVE DASHBOARD\")\n",
    "print(\"Use the dropdown menus below to filter and explore the data.\")\n",
    "print(\"Charts will update automatically when you change selections.\")\n",
    "\n",
    "# Create widgets\n",
    "months = monthly_data['month'].tolist()\n",
    "\n",
    "start_month = widgets.Dropdown(\n",
    "    options=months,\n",
    "    value=months[0],\n",
    "    description='üìÖ Start:',\n",
    "    style={'description_width': '80px'},\n",
    "    layout={'width': '200px'}\n",
    ")\n",
    "\n",
    "end_month = widgets.Dropdown(\n",
    "    options=months,\n",
    "    value=months[-1],\n",
    "    description='üìÖ End:',\n",
    "    style={'description_width': '80px'},\n",
    "    layout={'width': '200px'}\n",
    ")\n",
    "\n",
    "metric_choice = widgets.Dropdown(\n",
    "    options=[('Default Rate', 'default_rate'), ('Total Billed (¬£)', 'total_billed'), ('Total Paid (¬£)', 'total_paid')],\n",
    "    value='default_rate',\n",
    "    description='üìä Metric:',\n",
    "    style={'description_width': '80px'},\n",
    "    layout={'width': '200px'}\n",
    ")\n",
    "\n",
    "segment_choice = widgets.Dropdown(\n",
    "    options=[('Income Band', 'income'), ('Region', 'region')],\n",
    "    value='income',\n",
    "    description='üéØ Segment:',\n",
    "    style={'description_width': '80px'},\n",
    "    layout={'width': '200px'}\n",
    ")\n",
    "\n",
    "# Create output area\n",
    "output = widgets.Output()\n",
    "\n",
    "def update_dashboard(start, end, metric, segment):\n",
    "    \"\"\"Update dashboard based on selections\"\"\"\n",
    "    with output:\n",
    "        clear_output(wait=True)\n",
    "        \n",
    "        # Filter data by date range\n",
    "        start_idx = months.index(start)\n",
    "        end_idx = months.index(end)\n",
    "        \n",
    "        if start_idx > end_idx:\n",
    "            print(\"‚ùå Start month must be before or equal to end month\")\n",
    "            return\n",
    "        \n",
    "        filtered_data = monthly_data.iloc[start_idx:end_idx+1].copy()\n",
    "        \n",
    "        print(f\"üìä Showing: {start} to {end} | Metric: {metric.replace('_', ' ').title()} | Segment: {segment.title()}\")\n",
    "        print(f\"üìà Data points: {len(filtered_data)} months\")\n",
    "        print()\n",
    "        \n",
    "        # Create trend chart\n",
    "        fig1 = px.line(\n",
    "            filtered_data,\n",
    "            x='month',\n",
    "            y=metric,\n",
    "            title=f'üìà {metric.replace(\"_\", \" \").title()} Trend',\n",
    "            markers=True,\n",
    "            height=400\n",
    "        )\n",
    "        fig1.update_layout(\n",
    "            title_x=0.5,\n",
    "            hovermode='x unified',\n",
    "            xaxis_tickangle=-45\n",
    "        )\n",
    "        fig1.show()\n",
    "        \n",
    "        # Create segmentation chart\n",
    "        if segment == 'income':\n",
    "            seg_data = income_data\n",
    "            x_col = 'income_band'\n",
    "            title = 'üí∞ Default Rate by Income Band'\n",
    "        else:\n",
    "            seg_data = region_data\n",
    "            x_col = 'region'\n",
    "            title = 'üåç Default Rate by Region'\n",
    "        \n",
    "        fig2 = px.bar(\n",
    "            seg_data,\n",
    "            x=x_col,\n",
    "            y='default_rate',\n",
    "            title=title,\n",
    "            color='default_rate',\n",
    "            color_continuous_scale='Viridis',\n",
    "            height=400\n",
    "        )\n",
    "        fig2.update_layout(\n",
    "            title_x=0.5,\n",
    "            xaxis_tickangle=-45 if segment == 'region' else 0\n",
    "        )\n",
    "        fig2.show()\n",
    "        \n",
    "        # Show summary statistics\n",
    "        avg_metric = filtered_data[metric].mean()\n",
    "        print(f\"\\nüìä SUMMARY STATISTICS:\")\n",
    "        print(f\"   Average {metric.replace('_', ' ').title()}: {avg_metric:,.2f}\")\n",
    "        print(f\"   Period: {start} to {end}\")\n",
    "        print(f\"   Months included: {len(filtered_data)}\")\n",
    "        \n",
    "        # Show filtered data table\n",
    "        print(f\"\\nüìã FILTERED DATA:\")\n",
    "        display(filtered_data)\n",
    "\n",
    "# Create interactive widget\n",
    "interactive_dashboard = widgets.interactive(\n",
    "    update_dashboard,\n",
    "    start=start_month,\n",
    "    end=end_month,\n",
    "    metric=metric_choice,\n",
    "    segment=segment_choice\n",
    ")\n",
    "\n",
    "# Display the dashboard\n",
    "dashboard_layout = widgets.VBox([\n",
    "    widgets.HTML(\"<h3>üéõÔ∏è Interactive Dashboard Controls</h3>\"),\n",
    "    widgets.HTML(\"<p><strong>Instructions:</strong> Select date range, metric, and segmentation options. Charts update automatically!</p>\"),\n",
    "    widgets.HBox([start_month, end_month]),\n",
    "    widgets.HBox([metric_choice, segment_choice]),\n",
    "    widgets.HTML(\"<hr style='margin: 20px 0;'>\"),\n",
    "    output\n",
    "])\n",
    "\n",
    "display(dashboard_layout)\n",
    "\n",
    "# Trigger initial display\n",
    "update_dashboard(months[0], months[-1], 'default_rate', 'income')"
   ]
  },
